.heading
	&_h1
		margin-bottom 10px
		font-family $h-font
		font-size 1.25rem
		color $c_top-menu
		line-height 1.5625rem
		font-weight 400
		text-transform uppercase
	&_h2
		margin-top 20px
		margin-bottom 10px
		font-family $h-font
		font-size 1.125rem
		color $c_top-menu
		line-height 1.5625rem
		font-weight 400
		text-transform uppercase
	&_h3
		font-family $h-font
		font-size 1rem
		color $c_top-menu
		line-height 1.25rem
		font-weight 700

.page__inner
	display: flex
	min-height: 100vh
	flex-direction: column
	margin: 0 auto
	background-image: linear-gradient(to bottom,rgba(255,255,255,0.5) 0,rgba(255,255,255,0) 100%);
.page-content
	flex: 1

.container
	width: $page-width
	margin: 0 auto
	padding-left 10px
	padding-right 10px
.overlay
	display: none
	position: absolute
	top: 0
	left: 0
	bottom 0
	width: 100%
	min-height: 100vh
	background-color: rgba(0,0,0, .5)
	z-index: 1100

.link
	text-decoration: none

img
	max-width: 100%
	height: auto
.btn
	display inline-block
	vertical-align top
	border: none
	outline: none
	&_read-more
		font-size: 14px;
		color: #aaa;
		padding-left: 15px;
		padding-right: 15px;
		border: 1px solid #aaa;
		border-radius: 20px;
		&:hover
			border 1px solid transparent
.icon, .form-icon
	position absolute
	display inline-block
	vertical-align top
	fill: inherit
	stroke: inherit

.input-wrapper
	position relative
.input-field
	display inline-block
	vertical-align top
	border: none
	outline: none

.hidden
	display none
