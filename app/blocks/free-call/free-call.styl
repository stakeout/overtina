.free-call
	&__inner
		display -webkit-flex
		display -ms-flex
		display flex
	&__left-column,
	&__right-column
		width 50%
	&__link
		position relative
		display block
		margin 0 auto
		max-width 300px
		padding-top 15px
		padding-bottom 15px
		color $c_black
		background-color $c_light-green
		text-align center
		border-radius 5px
		box-shadow 0 0 5px 0 rgba(0,0,0,.3)
		cursor pointer
		&:after
			position absolute
			top 100%
			left 0
			content '*мы перезвоним через 25 секунд'
			padding-top 8px
			font-size 12px
			color $c_grey-text
		&:hover
			color $c_black
			background-color $c_moon-bg
