.side-menu
	min-width: 23rem
	margin-right: 35px
	&__list
		border: 1px solid $c_grey-text
		border-radius: 10px
		margin-bottom: 25px
	&__item:not(:last-child)
		border-bottom: 1px solid rgba(0,0,0,.1)//$c_grey-tex
		&:first-child
			padding: 10px 0
			background-color: $c_light-grey
			border-radius: 10px 10px 0 0
			color: $c_grey-text
			font-family: $base-font
			font-size: 1.4rem
			line-height: 1.25rem
			text-transform: uppercase
			text-align: center
	&__link
		display: block
		padding-left: 1.25rem
		color: $c_left-menu-links
		font-family: $base-font
		font-size: 1.6rem
		font-weight: 500
		line-height: 3rem
		&_active
			background-color: $c_light-green
		&:hover
			background-color: $c_light-grey
