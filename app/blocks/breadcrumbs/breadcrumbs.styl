.breadcrumbs
	margin-bottom 10px
	&__list
		display: flex
	&__item
		position: relative
		&:not(:last-child):after
			position: absolute
			right: 5px
			top: 4px
			content: '\2192'
			font-size: 20px
	&__link
		position: relative
		display: inline-block
		vertical-align: top
		padding-right: 30px
		color: $c_grey-text
		font-family: $base-font
		font-size 13px
		font-weight 400
		line-height 30px
		&:hover
			text-decoration: underline
		&_active:hover
			text-decoration none
