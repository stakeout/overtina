.breadcrumbs
	min-height 45px
	padding-top 7px
	&__list
		display: flex
	&__item
		position: relative
		&:not(:last-child):after
			position: absolute
			right: 5px
			top: 3px
			content: '\2192'
			font-size: 20px
			color: $c_grey-text
	&__link
		position: relative
		display: inline-block
		vertical-align: top
		padding-right: 30px
		color: $c_grey-text
		font-family: $base-font
		font-size 13px
		font-weight 400
		line-height 30px
		&:hover
			text-decoration: underline
		&_active:hover
			text-decoration none
		&_home
			padding-left 25px
			.icon
				left 0
				top calc(50% - 9px)
				fill $c_grey-text
