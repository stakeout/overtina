.promo
	&__inner
		padding-top 25px
		padding-bottom 25px
	&__header
		display -webkit-flex
		display -ms-flex
		display flex
		margin-bottom 15px
		h2
			min-width 405px
			font-family: $h-font
			color: $c_top-menu
			font-size: 18px;
			line-height: 25px;
			font-weight: 400;
			text-transform: uppercase;
		p
			font-size: 16px;
			font-family: $base-font
			color: $c_left-menu-links
			font-weight: normal;
			font-style: normal;
			line-height: 22px;
	&__wrapper
		display -webkit-flex
		display -ms-flex
		display flex
		justify-content: space-between;
	&__img-wrapper
		margin-bottom 10px
	&__item-box
		max-width 380px
		font-size: 16px;
		font-family: $base-font
		color: #494949;
		font-weight: normal;
		font-style: normal;
		line-height: 22px;
		h3
			margin-bottom 10px
			font-family: $h-font
			color: $c_top-menu
			font-size: 16px;
			line-height: 20px;
			font-weight: 700;
			text-align center
	&__item
		position relative
		margin-bottom 15px
		padding-left 15px
		&:before
			position absolute
			content ''
			content: '';
			left: 0;
			top: 10px
			width: 6px;
			height: 6px;
			background-color: #53bf6b;
			border-radius: 50%;
		a
			font-size 14px
			color $c_light-green
			&:hover
				text-decoration underline
		small
			position relative
			left 5px
			font-size 10px
	&__link
		position relative
		display inline-block
		vertical-align top
		padding-top 7px
		padding-bottom 7px
		padding-left 25px
		padding-right 10px
		color $c_light-green
		&:hover
			text-decoration underline
			&:before
				opacity 1
		&:before
			position absolute
			content ''
			left 0
			width 20px
			height 20px
			background-color $c_light-green
			border-radius 50%
			opacity .8
		&:after
			position absolute
			content '\2192'
			top 5px
			left 2px
			color $c_white
			font-size 14px
			font-weight 700
	&__text
		a
			color $c_black
			&:hover
				border-bottom 1px solid $c_light-green
