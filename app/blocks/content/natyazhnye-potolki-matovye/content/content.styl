.content
	&__title
		margin-bottom: 15px
		color: $c_top-menu
		font-family: $h-font
		font-size: 1.25rem
		font-weight: 400
		line-height: 30px
		text-transform: uppercase
	&__description
		margin-bottom 10px
		font-size: 16px;
		font-family: $base-font
		color $c_left-menu-links
		font-weight: normal;
		font-style: normal;
		line-height 22px
		a
			color #28a4c9
			text-decoration: none
			&:hover
				text-decoration underline
		em
			font-style italic
