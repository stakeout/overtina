.content
	&__catalog-pongs
		background-image url(../images/pongs/pongs_palitra.jpg)
		background-repeat no-repeat
		background-position 85% 50%
		background-size 317px 160px
		header
			margin-bottom 10px
		ul
			margin-bottom 10px
			list-style: circle
			list-style-position inside
		li
			margin-bottom 5px
	&__features-pongs
		padding-right 20px
		table
			margin-bottom 20px
		tr
			border 1px solid $c_moon-bg
		td
			padding-top 8px
			padding-bottom 8px
			padding-left 10px
			&:first-child
				border-right 1px solid $c_moon-bg
