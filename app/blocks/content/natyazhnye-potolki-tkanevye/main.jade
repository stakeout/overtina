							tr
								td Ткань CLIPSO 705AB антибактериальная 
								td Белый
								td 3.0 - 5.10
								td от 47.5 руб
							tr
								td Ткань CLIPSO 308Т светопрозрачная 
								td -
								td 3.0 - 5.10
								td от 47.5 руб
					+b.TABLE.descor-price&attributes(attributes)
						caption
							h3.heading.heading_h2 Цены на тканевые натяжные потолки "DESCOR" (Германия)
						tr
							th Торговое название полотна
							th Цвет
							th Ширина, м
							th Цена за 1 м
								sup 2 
								| с установкой, руб
						tr
							td Ткань DESCOR 050
							td Белый холодный
							td 3.10 - 5.05
							td от 28.5 руб
						tr
							td Ткань DESCOR 069
							td Белый теплый
							td 3.10 - 5.05
							td от 28.5 руб
						tr
							td Ткань DESCOR STAR 167
							td Белый блеск
							td 3.10 - 5.05
							td от 45.6 руб
						tr
							td Ткань DESCOR STAR
							td Бежевый блеск
							td 3.10 - 5.05
							td от 45.6 руб
						tr
							td Ткань DESCOR STAR 164
							td Черный блеск
							td 3.10 - 5.05
							td от 45.6 руб
					+price-ceilings({title:'ho-ho-ho',
													images:{
														1:'http://placehold.it/290x200',
														2:'http://placehold.it/290x200',
														3:'http://placehold.it/290x200'
														},
														h3:['заголовок1', 'заголовок2', 'заголовок 3м'],
														price:[234.3, 321.6, 534.1]
						})
					