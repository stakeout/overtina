.discount
	background-image url(../images/discount.svg)
	background-repeat no-repeat
	background-position center 57%
	background-size 210px 210px
	&__header
		margin-bottom 220px
	&__list
		padding-top 15px
	&__item
		position relative
		padding-left 20px
		margin-bottom 15px
		&:before
			position: absolute;
			content: '';
			left: 0;
			top: calc(50% - 4px)
			width: 0;
			height: 0;
			border-style: solid;
			border-width: 4px 0 4px 12px;
			border-color: transparent transparent transparent $c_light-green
	&__text
		margin-bottom 35px
	&__button
		position relative
		display block
		margin 0 auto
		max-width 300px
		padding-top 15px
		padding-bottom 15px
		color $c_grey-text
		// background-color $c_light-green
		text-align center
		border-radius 5px
		box-shadow 0 0 5px 0 rgba(0,0,0,.3)
		cursor pointer
		&:after
			position absolute
			top 90%//-25px
			left 0
			content '*мы свяжемся с Вами в течение часа'
			padding-top 8px
			font-size 12px
			color $c_grey-text
		&:hover
			color $c_black
			background-color $c_moon-bg
	span
		color $c_light-green
