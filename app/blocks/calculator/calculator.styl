.calculator
	&__inner
		display -webkit-flex
		display -ms-flex
		display flex
		padding-left 10px
		padding-right 10px
		padding-top 10px
		padding-bottom 10px
		background-color $c_footer-yellow-lighter
		border-radius: 10px
	&__title
		font-family: $h-font
		color: $c_black
		font-size: 17px
		line-height 20px
		font-weight 500
		text-transform: uppercase
	&__subtitle
		margin-bottom 20px
		font-family: $base-font
		color: $c_black
		line-height 20px
		font-size: 13px
	&__fieldset
		position relative
		margin-right 15px
		padding-bottom 15px
		font-family: $base-font
		color: $c_white
		font-size: 15px
		line-height 22px
		font-weight 700
		border-top: 1px solid $c_white
		border-left none
		border-right none
		border-bottom none
	&__legend
		margin-right 15px
		margin-bottom 5px
		padding-right 15px
	&__select
		font-size 13px
		font-weight 300
	&__form-item
		display -webkit-flex
		display -ms-flex
		display flex
		justify-content: space-between
		align-items: center
		font-size: 16px
		font-weight 400
		color: $c_black
	&__input-field
		width 128px
		height 35px
		padding-left: 20px
		margin-bottom 10px
		line-height 35px
		border-radius: 5px
		font-weight 700
	&__square
		font-family: $base-font
		color #000
		font-size 16px
		font-weight 400
		font-style italic
		sup
			margin-left -5px
			font-size 8px
	&__square-value
		display inline-block
		vertical-align bottom
		font-family: $h-font
		font-size: 16px
		margin-left 150px
		padding-right 10px
		font-weight 700
	&__price
		color $c_black
	&__full-price
		display inline-block
		vertical-align middle
		margin-left 120px
	&__left-part
		min-width: 50%
	&__right-part
		min-width: 50%
		margin-left 15px
	&__bonus
		min-height 100%
		padding 10px
		border-radius: 10px
		background-color $c_white
		h3
			font-family $h-font
			font-size 16px
			color $c_black
			line-height 30px
			font-weight 700
			text-transform uppercase
		p
			margin-bottom 15px
			font-family $base-font
			font-size 16px
			font-weight 500
		span
			color $c_light-green
			text-transform uppercase
			text-decoration underline
	&__item
		position relative
		padding-left 20px
		margin-bottom 15px
		&:before
			position: absolute;
			content: '';
			left: 0;
			top: 3px;
			width: 0;
			height: 0;
			border-style: solid;
			border-width: 4px 0 4px 12px;
			border-color: transparent transparent transparent #00a287;
