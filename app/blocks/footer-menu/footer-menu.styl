.footer-menu
	width: 240px
	&__site-map
		display: inline-block
		vertical-align: top
		padding-bottom 3px
		margin-bottom 20px
		color: $c_white
		font-family: $base-font
		font-size: 16px
		font-weight: 700
		border-bottom: 2px solid $c_green-soft
		opacity: .7
		&:hover
			opacity: 1
	&__link
		color: $c_white
		font-family: $base-font
		font-size 16px
		line-height 25px
		opacity: .7
		&:hover
			opacity: 1
