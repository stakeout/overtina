.icon-menu
	margin-bottom 25px
	&__inner
		background-color: $c_icon-menu
	&__list
		display: flex
		justify-content: space-around
	&__link
		position relative
		display: inline-block
		vertical-align: top
		padding-top: 25px
		padding-bottom 25px
		padding-right 5px
		padding-left 45px
		color: #6d6d6d
		font-family: $base-font
		font-size: 14px
		font-weight: 400
		line-height: 16px
		line-height: 16px
		&:hover > svg
			opacity: 1
	&__icon
		left 0
		&_calculator
			opacity: .7
			fill: $c_green-soft
			top: calc(50% - 17px)
		&_picture
			opacity: .7
			fill: $c_green-soft
			top: calc(50% - 17px)
		&_percentage
			opacity: .7
			fill: $c_green-soft
			top: calc(50% - 15px)
		&_lamp
			opacity: .7
			fill: $c_green-soft
			top: calc(50% - 17px)
		&_project
			opacity: .7
			fill: $c_green-soft
			top: calc(50% - 17px)
		&_customer
			opacity: .7
			fill: $c_green-soft
			top: calc(50% - 17px)
