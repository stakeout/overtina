.ceilings-catalog
	min-height 402px
	background-color #f5f5f5
	&__inner
		display -webkit-flex
		display -ms-flex
		display flex
		flex-flow row wrap
		justify-content space-between
	&__left-part
		width 250px
	&__right-part
		width 860px
	&__title
		width 100%
		margin-bottom 20px
		font-family $h-font
		font-size 18px
		line-height 25px
		font-weight 500
		text-transform uppercase
	h3
		position relative
		right 10px
		display inline-block
		vertical-align top
		padding-top 12px
		padding-bottom 12px
		padding-left 10px
		padding-right 30px
		font-family $h-font
		font-size 14px
		color $c_white
		background-color $c_light-green
		text-transform uppercase
		&:before
			position absolute
			content ''
			left 0
			top 100%
			width: 0;
			height: 0;
			border-style: solid;
			border-width: 0 10px 10px 0;
			border-color: transparent #2f8041 transparent transparent;
	&__accordin
		background-color $c_top-menu
		box-shadow 0 0 2px 1px rgba(0,0,0,.5)
	&__wrapper
		background-color #3e4753
		border-top 1px solid #5e717e
		border-bottom 1px solid #5e717e
	&__accordin-title
		display block
		padding 5px 0
		padding-left 15px
		padding-bottom 10px
		color #fff
		opacity .7
		cursor pointer
		&:hover
			opacity 1
	&__accordin-link
		position relative
		display block
		padding-top 10px
		padding-bottom 10px
		padding-left 30px
		color $c_white
		border-bottom 1px solid #2c303b
		&:before
			content ''
			position absolute
			left: 15px;
			top: calc(50% - 2px);
			width: 4px;
			height: 4px;
			background-color: #53bf6b;
			border-radius: 50%;
		&:hover
			text-decoration underline
	&__common-goods
		background-color $c_white
		box-shadow 0 0 2px 1px rgba(0,0,0,.5)
	&__img-wrapper
		display -webkit-flex
		display -ms-flex
		display flex
		justify-content: space-around
		padding-top 25px
		padding-bottom 25px
